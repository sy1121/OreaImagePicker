<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/icon_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_image_folder"
        android:layout_margin="6dp">

        <ImageView
            android:id="@+id/folder_thumbnail"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_image" />

    </FrameLayout>

   <!-- <ImageView
        android:id="@+id/folder_thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon_panel"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/folder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="10"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="所有照片"
            android:textSize="16sp"
            android:textColor="@color/color_text_album_black"/>
        <TextView
            android:id="@+id/file_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="共23张"
            android:textSize="12sp"
            android:textColor="@color/color_text_album_grey"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/select_sign"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_vector_check"
        android:visibility="gone"/>
</RelativeLayout>